<h1>Post new word</h1>

<%= error_messages_for 'word' -%>

<% form_for @word do |f| %>

  <p><%= f.label :term, 'Word' %><br />
    <%= f.text_field :term %></p>

  <p><%= f.label :definition %><br />
    <%= f.text_field :definition %></p>

  <p><%= f.label :word_in_context %><br />
    <%= f.text_area :word_in_context %></p>

  <p><label for="word_category">Category</label><br />
    <%= collection_select(:word, :category_id, @categories, :id, :name) %></p>	

  <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', root_path %>
